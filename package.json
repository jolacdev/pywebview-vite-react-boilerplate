{
  "name": "pywebview-vite-react-boilerplate",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "initialize": "pnpm install && pnpm initialize-frontend && run-script-os",
    "initialize:windows": "python -m venv .venv && .\\.venv\\Scripts\\pip install -r requirements.txt",
    "initialize:macos": "python3 -m venv .venv && ./.venv/bin/pip install -r requirements.txt",
    "initialize-frontend": "cd frontend && pnpm install",
    "dev": "cd frontend && pnpm dev",
    "start": "pnpm build-frontend && run-script-os",
    "start:windows": ".\\.venv\\Scripts\\python backend\\index.py",
    "start:default": "./.venv/bin/python backend/index.py",
    "clean": "rimraf dist build gui",
    "build": "pnpm clean && pnpm build-frontend && run-script-os",
    "build:macos": "./.venv/bin/python build-macos.py py2app",
    "build:windows": ".\\.venv\\Scripts\\pyinstaller build-windows.spec",
    "build:linux": "./.venv/bin/pyinstaller build-linux.spec",
    "build-frontend": "cd frontend && pnpm build"
  },
  "keywords": [
    "pywebview",
    "python",
    "javascript",
    "typescript",
    "react",
    "vite"
  ],
  "author": "Jose L",
  "devDependencies": {
    "run-script-os": "1.1.6",
    "rimraf": "6.0.1"
  }
}
